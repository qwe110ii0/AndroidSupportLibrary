<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res/com.lidong.demo"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_circle_progress_view"
    tools:context="com.lidong.demo.demo.view.CircleProgressViewActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <com.lidong.android_ibrary.view.CircleProgressView
            android:id="@+id/circleProgressbar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />
    </RelativeLayout>
    <com.lidong.android_ibrary.view.CustomerView
        android:layout_below="@id/rl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:titleText1="3712"
        android:padding="10dp"
        android:id="@+id/ii"
        custom:titleTextColor1="#ff0000"
        custom:titleTextSize1="40sp" />


    <com.lidong.android_ibrary.view.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/ll_x"
        custom:image2="@mipmap/push"
        custom:imageScaleType2="center"
        custom:titleText2="hello andorid ! "
        custom:titleTextColor2="#ff0000"
        custom:titleTextSize2="30sp"
        android:layout_alignBottom="@+id/ii"
        android:layout_centerHorizontal="true"/>

    <com.lidong.android_ibrary.view.DrawView
        android:layout_below="@id/ll_x"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#646464"
        android:layout_alignParentBottom="true">

    </com.lidong.android_ibrary.view.DrawView>
</RelativeLayout>
